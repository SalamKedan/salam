{#
  Desktop Navigation for 'The Digital Playground' Theme
  Features: Icon-based, modern, clean, and supports dual-language (RTL/LTR)
  Now uses localization keys for dynamic translation.
#}

{# We define the list of navigation items once. The title/ar_title are now replaced by localization keys. #}
{% set main_categories = [
    { 'key': 'planners', 'icon': 'sicon-calendar-date', 'url': '/categories/planners' },
    { 'key': 'diaries', 'icon': 'sicon-lock', 'url': '/categories/diaries' },
    { 'key': 'education', 'icon': 'sicon-light-bulb', 'url': '/categories/education' },
    { 'key': 'games', 'icon': 'sicon-game-controller-alt', 'url': '/categories/games' }
] %}

<nav class="flex h-full items-stretch space-x-6 rtl:space-x-reverse text-sm font-semibold">
    {% for category in main_categories %}
        {# 
           Use the translation filter (__) with the full key path.
           The key is theme_nav. followed by the category 'key' (e.g., theme_nav.planners)
        #}
        {% set label = ('theme_nav.' ~ category.key) | __ %}

        <a href="{{ category.url }}" 
           class="flex items-center text-dark hover:text-primary transition-colors duration-200 border-b-2 border-transparent hover:border-primary px-2 h-full">
            
            {# Icon with padding/margin for spacing #}
            <i class="{{ category.icon }} rtl:ml-2 ltr:mr-2 text-xl"></i>
            
            {# Text Label - Now dynamically translated #}
            <span class="pt-1">{{ label }}</span>
        </a>
    {% endfor %}
</nav>
